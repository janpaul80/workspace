# ============================================================
# HeftCoder Workspace - Environment Variables
# Copy this file to .env and fill in your values
# ============================================================

# --- Gemini AI (for Plan mode chat) ---
GEMINI_API_KEY=your-gemini-api-key-here

# --- Microsoft AI Studio (for Agent mode) ---
MICROSOFT_STUDIO_API_KEY=your-microsoft-studio-api-key-here
MICROSOFT_STUDIO_API_URL=https://models.inference.ai.azure.com
MICROSOFT_STUDIO_MODEL=gpt-4o

# --- OpenClaw Orchestrator ---
OPENCLAW_BASE_URL=http://openclaw:8000
MISTRAL_API_KEY=your-mistral-api-key-here

# --- Supabase (user profiles & credits) ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# --- Workspace Configuration ---
WORKSPACE_BASE_URL=https://workspace.heftcoder.icu

# --- Server Ports ---
BACKEND_PORT=3001
FRONTEND_PORT=80
OPENCLAW_PORT=8000

# --- Vite Frontend (prefixed with VITE_ for client access) ---
VITE_API_BASE_URL=
VITE_WS_BASE_URL=
